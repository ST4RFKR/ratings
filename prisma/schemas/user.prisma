model User {
  id       String @id @default(uuid())
  fullName String @map("full_name")
  email    String @unique
  password String

  role UserRole @default(USER)

  employeeProfiles Employee[]
  ownedCompanies   Company[]  @relation("CompanyOwner")

  activeCompanyId String?  @map("active_company_id")
  activeCompany   Company? @relation("ActiveCompany", fields: [activeCompanyId], references: [id], onDelete: SetNull)

  verified DateTime? @default(now()) //TODO: ПЕРЕДЕЛАТЬ - добавить подтверждения через почту

  provider   String?
  providerId String? @map("provider_id")

  verificationCode VerificationCode?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

enum UserRole {
  USER
  MANAGER
  ADMIN
}
